# sources for trustedaudiodrivers2.exe
# sample app for setting output policies using MAKE_MFPROTECTIONDATA_TRUSTEDAUDIODRIVERS2

TARGETTYPE = PROGRAM
TARGETNAME = trustedaudiodrivers2

USE_ATL = 1
ATL_VER = 70

UMTYPE = console
UMENTRY = wmain

# need Win7 for IMMDevice.Activate(IMFTrustedOutput)
_NT_TARGET_VERSION=$(_NT_TARGET_VERSION_WIN7)

C_DEFINES = $(C_DEFINES) -DUNICODE -D_UNICODE

!ifdef DEBUG
C_DEFINES = $(C_DEFINES) -DDEBUG
!endif

USE_MSVCRT = 1

SOURCES = \
    main.cpp \
    outputpolicy.cpp \
    outputschema.cpp \
    prefs.cpp \
    setotapolicy.cpp \
    stringify.cpp \

INCLUDES = \

TARGETLIBS = \
    $(SDK_LIB_PATH)\mfplat.lib \
    $(SDK_LIB_PATH)\ole32.lib \
    $(SDK_LIB_PATH)\oleaut32.lib \
    $(SDK_LIB_PATH)\user32.lib \